{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!
{% endblock %}

{% block body %}
	<div class="container w-4/5 flex justify-center">


		<div class=" mx-auto my-3">
			<div class="flex justify-end">
				<a class="bg-indigo-600 hover:bg-indigo-700 py-1 px-8 rounded-lg text-indigo-100 border-b-4 border-indigo-700 hover:border-indigo-800 transition duration-300 w-48 text-center" href="{{path('product.create')}}">Add product</a>
			</div>
		</div>


		<div
			class="overflow-x-auto bg-white dark:bg-neutral-700 w-full">

			<!-- Table -->
			<table
				class="min-w-full text-left text-xs whitespace-nowrap border-collapse border" id="product">

				<!-- Table head -->
				<thead class="uppercase tracking-wider border-b-2 dark:border-neutral-600 bg-neutral-50 dark:bg-neutral-800">
					<tr>

						<th class="bg-rose-800 px-6 py-3">
							Name
							<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
							</svg>
						</th>

						<th scope="col" class=" px-6 py-3">

							Price
							<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
							</svg>

						</th>
						<th scope="col" class=" px-6 py-3">

							Stock
							<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
							</svg>

						</th>
						<th scope="col" class=" px-6 py-3">

							Status
							<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
							</svg>

						</th>
					</tr>
				</thead>

				<!-- Table body -->
				<tbody>


					{% for product in products %}


						<tr class="border-b dark:border-neutral-600 hover:bg-neutral-100 dark:hover:bg-neutral-600">
							<th scope="row" class="px-6 py-3">
								<a href="{{path('product.show',{'id':product.id})}}">{{product.name}}</a>


							</th>
							<td class="px-6 py-3">{{product.price}}</td>
							<td class="px-6 py-3">30</td>
							<td class="px-6 py-3">In Stock</td>
						</tr>

					{% endfor %}


				</tbody>

			</table>
		</div>
	</div>

	<script></script>

{% endblock %}
