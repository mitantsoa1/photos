{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="">
		<div class="flex justify-center pt-2">
			<div class="w-1/4"></div>
			<form class="bg-white shadow-md rounded px-20 pt-6 pb-8 mb-4 w-2/5" method="POST">


				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>

				<div class="mb-4">
					<label class="block text-gray-700 text-sm font-bold mb-2" for="username">
						Email
					</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="john@doe.fr" required autofocus>

				</div>

				<div class="mb-6">
					<label class="block text-gray-700 text-sm font-bold mb-2" for="password">
						Password
					</label>
					<input
					type="password" name="password" id="inputPassword" autocomplete="current-password" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="******************">


				{# <p class="text-red-500 text-xs italic">Please choose a password.</p> #}
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="md:flex md:items-center mb-6">
					<label class="md:w-1/3 block text-gray-500 font-bold">
						<input class="mr-2 leading-tight" type="checkbox" name="_remember_me">
						<span class="text-sm">
							Remember me
						</span>
					</label>
					<label class="md:w-2/3 block text-sm text-right  ">
						<a href="{{path('app_register')}}" class="text-purple-400 hover:text-purple-800 hover:underline">Don't have account?</a>


					</label>
				</div>
				<div class="text-center">
					<button class="w-full shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
						Log in
					</button>
				</div>

			</form>
			<div class="class= w-1/4"></div>

		</div>
	</div>


{% endblock %}
